header
    div
        h5 {{ $ctrl.chartTitle }}

        button.btn-ignite.btn-ignite--link-dashed-secondary(
            bs-dropdown='' aria-haspopup='true' aria-expanded='expanded' data-auto-close='1' data-trigger='click'
        )
            svg(ignite-icon='gear' data-animation='am-flip-x').icon

        ul.select.dropdown-menu(role='menu')
            li(
                ng-repeat='dataset in $ctrl.config.data.datasets'
                ng-init='color = $ctrl.IgniteChartColors[$index]'
            )
                a(ng-click='$ctrl.toggleDatasetVisibility(dataset)')
                    i.fa.fa-check-square-o.pull-left(ng-if='!dataset.hidden')
                    i.fa.fa-square-o.pull-left(ng-if='dataset.hidden')
                    span(ng-bind-html='$ctrl.mapDatasetKeyToName(dataset.label)')
                    i.fa.fa-square(ng-style='{"color":color}')
            li.divider
            li: a(ng-click='$ctrl.showAllDatasets()') Show All
            li.divider
            li: a(ng-click='$hide()') Close

    div
        span Range:
            button.btn-ignite.btn-ignite--link-success.link-primary(
                ng-model='$ctrl.currentRange'
                ng-change='$ctrl.changeXRange($ctrl.currentRange)'
                bs-options='item as item.label for item in $ctrl.ranges'
                bs-select
            )

canvas

.no-data(ng-if='!$ctrl.config.data.datasets')
    | No Data #[br]
    | Make sure you connected to the right grid.
