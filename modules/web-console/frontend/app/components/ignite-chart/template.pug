.panel--ignite
    .panel-heading
        .panel-title
            span {{$ctrl.chartTitle}}
            svg(ignite-icon='gear' data-animation='am-flip-x' bs-dropdown='' aria-haspopup='true' aria-expanded='expanded' data-auto-close='1' data-trigger='click').icon
            ul.select.dropdown-menu(role='menu')
                    li(ng-repeat='dataset in $ctrl.config.data.datasets' ng-init='color = $ctrl.IgniteChartColors[$index];')
                        a(ng-click='$ctrl.toggleDatasetVisibility(dataset)')
                            i.fa.fa-check-square-o.pull-left(ng-if='!dataset.hidden')
                            i.fa.fa-square-o.pull-left(ng-if='dataset.hidden')
                            span {{::dataset.label}}
                            i.fa.fa-square(ng-style='{"color":color}')
                    li.divider
                    li: a() Select all
                    li.divider
                    li: a(ng-click='$hide()') Close

            .ignite-chart-range
                span Range:&nbsp;
                    button.select-manual-caret.btn.btn-default(
                        ng-init='timeout=timeLine[0].value'
                        ng-model='timeout'
                        ng-change='cpu.switchRange(timeout)'
                        bs-options='item.value as item.label for item in timeLine'
                        bs-select
                    )

    .ignite-chart-placeholder
        canvas